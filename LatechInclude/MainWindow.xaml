<Window x:Class="LatechInclude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        Height="380"
        Width="560"
        Title="Latech Include"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">

        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="25">
                <MenuItem Header="_File" HorizontalAlignment="Center" Height="25" Width="35">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Settings" HorizontalAlignment="Center" Height="25" Width="56">
                </MenuItem>
                <MenuItem Header="_TextEditor" HorizontalAlignment="Center" Height="25" Width="65">
                </MenuItem>
            </Menu>
            <StackPanel VerticalAlignment="Bottom">
                <StatusBar Height="31">
                    <TextBlock x:Name="statusBar_TextBlock" TextWrapping="Wrap"/>
                </StatusBar>
            </StackPanel>
        </DockPanel>
        <Button x:Name="PathButton" Command="{Binding PathFolderDialogCommand}" Content="Path" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.82,-0.025" Height="25"/>
        <Button x:Name="makeTex" Content="Tex" HorizontalAlignment="Left" Margin="90,38,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
        <TextBox x:Name="path_TextBox" Height="25" Margin="170,38,10,0" VerticalAlignment="Top" MaxLines="1"/>

        <ListView x:Name="MainListView"  Margin="10,68,10,35" ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" DisplayMemberBinding="{Binding Position}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Pos">Pos.</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="250" DisplayMemberBinding="{Binding FileName}">
                        <GridViewColumnHeader Tag="FileName" Content="Filename"/>
                    </GridViewColumn>
                    <GridViewColumn Width="120" DisplayMemberBinding="{Binding Extension}">
                        <GridViewColumnHeader Tag="Extension" Content="Extension"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
