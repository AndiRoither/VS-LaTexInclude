<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LatechInclude.View"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="LatechInclude.View.SettingsView"
             mc:Ignorable="d" Height="300" Width="410">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="410">
            <TabItem Header="General">
                <Grid Background="#FFE5E5E5">
                    <Custom:ToggleSwitch Name="SaveWhiteList_ToggleB" Header="Save WhiteList" Margin="10,20,284,170" IsChecked="False" IsCheckedChanged="IsCheckedChanged_SaveWhiteList"/>
                    <Custom:ToggleSwitch Name="StatusBar_ToggleB" Header="Status Bar" Margin="125,20,169,170" IsChecked="False" IsCheckedChanged="IsCheckedChanged_StatusBar"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
