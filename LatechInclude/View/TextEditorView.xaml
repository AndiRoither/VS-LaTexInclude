<UserControl x:Class="LatechInclude.View.TextEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LatechInclude.View"
             mc:Ignorable="d" Height="300" Width="500">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Command="">
                    <Image Source="/EmbeddedRessources/Images/Save.png" Width="16" Height="16" />
                </Button>
                <Separator />
            </ToolBar>
            <RichTextBox Name="rtbEditor" Block.LineHeight="1" AcceptsTab="True" />
        </DockPanel>
    </Grid>
</UserControl>
